# Environment
NODE_ENV=development

# Server
PORT=3001
API_PREFIX=api/v1

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=lenva_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# File Upload
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug

# AI Services
# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=deepseek/deepseek-chat-v3.1:free
OPENROUTER_MAX_TOKENS=10000
OPENROUTER_TEMPERATURE=0.7

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co/v1
HUGGINGFACE_DEFAULT_MODEL=mistralai/Mistral-7B-Instruct-v0.3

# App URL for OpenRouter
APP_URL=http://localhost:3001
